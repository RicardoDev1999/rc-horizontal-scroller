{
  "name": "rc-infinite-slider",
  "version": "1.0.0",
  "description": "A lightweight infinite carousel component for React with RTL support",
  "author": "Ricardo Duarte",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "unpkg": "dist/index.umd.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && rollup -c",
    "prepublishOnly": "npm run build",
    "start:sample": "cd sample && npm start",
    "install:sample": "cd sample && npm install",
    "setup:sample": "npm run build && npm run install:sample"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all",
    "ie 11"
  ],
  "keywords": [
    "react",
    "carousel",
    "slider",
    "infinite",
    "component",
    "rtl",
    "responsive"
  ],
  "devDependencies": {
    "@babel/core": "^7.27.1",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-react": "^7.27.1",
    "autoprefixer": "^10.4.21",
    "less": "^4.3.0",
    "postcss-preset-env": "^10.1.6",
    "postcss-rtl": "^2.0.0",
    "rimraf": "^6.0.1",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-terser": "^7.0.2",
    "rtlcss": "^4.3.0"
  }
}
